#########
######### custom aliases
#########

### bash related aliases

alias c='cd -'

alias bashaliases='vim ~/.bash_aliases'
alias bashrc='vim ~/.bashrc'
alias sourcebashrc='source ~/.bashrc'
alias vimrc='vim ~/.vimrc'
alias gitconfig='vim ~/.gitconfig'

alias update='sudo apt update && sudo apt upgrade && sudo apt autoremove'
alias upgrade='sudo apt update && sudo apt upgrade && sudo apt autoremove'

alias standby='sudo systemctl suspend && exit'

### git aliases
alias gc='git commit -a -m'
alias gp='git push origin HEAD'
alias gs='git status'
alias ga='git add'
alias gall='git add *'
alias gpull='git pull origin HEAD'
alias groot='cd ./$(git rev-parse --show-cdup)'

### further aliases
alias makec='make 2>&1 | grep -E --color=always "error|warning|$"'
